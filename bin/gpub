#!/bin/bash

export SAVEMASK=`umask`
[ -e /etc/esg.env ] && source /etc/esg.env || echo "Warning: Could not locate esg.env file"

version=${version:-"2.11.0"}
jar_home=${jar_home:-/for_ganzberger1/dist}
jar_file=${jar_home}/esg-publisher-ui-${version}.jar

umask 0002
${JAVA_HOME}/bin/java -Dsun.java2d.noddraw=true -ms1500m -mx1500m -Djava.util.prefs.systemRoot=/tmp/.java ${jar_file} -i /esg/config/esgcet/esg.ini -s pcmdi11.llnl.gov -p 7512

umask $SAVEMASK
exit 0
